{
  "name": "rehype-prism",
  "main": "dist/bundle.js",
  "module": "src/index.js",
  "scripts": {
    "test": "ava",
    "updateSnapshots": "ava -u",
    "upgrade": "mili upgrade",
    "clean": "rm -rf ./dist/*",
    "build": "npm run clean & rollup -c",
    "prepublishOnly": "npm test; npm run build",
    "ca": "git add -A && git-cz -av",
    "commit": "git-cz",
    "release": "standard-version",
    "release:alpha": "standard-version --prerelease alpha",
    "release:first": "standard-version --first-release",
    "postpublish": "git push",
    "report": "nyc npm run test",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "description": "The unified plugin used to highlight code block in html with Prism",
  "version": "0.1.0",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Val-istar-Guo/rehype-prism.git"
  },
  "keywords": [
    "rehyper",
    "prism",
    "highlight",
    "code",
    "unified",
    "markdown",
    "html",
    "remark",
    "highlighting",
    "syntax",
    "syntax-highlighting plugin"
  ],
  "author": "Val-istar-Guo <val.istar.guo@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Val-istar-Guo/rehype-prism/issues"
  },
  "homepage": "https://github.com/Val-istar-Guo/rehype-prism#readme",
  "ava": {
    "files": [
      "test/**/*.js",
      "!**/macros.js",
      "!**/*.macros.js"
    ],
    "sources": [
      "src/**/*.js"
    ],
    "failFast": true,
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "devDependencies": {
    "ava": "^1.0.0-beta.4",
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "husky": "^1.0.1",
    "rollup": "^0.58.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "commitizen": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "@commitlint/cli": "^7.2.0",
    "@commitlint/config-conventional": "^7.1.2",
    "standard-version": "^4.4.0",
    "coveralls": "^3.0.2",
    "nyc": "^13.1.0"
  },
  "dependencies": {
    "prismjs": "^1.15.0",
    "rehype-parse": "^6.0.0",
    "unist-util-modify-children": "^1.1.3",
    "unist-util-visit": "^1.4.0"
  },
  "peerDependencies": {
    "unified": "^7.0.2"
  }
}
